<!DOCTYPE html>
<html>
<head>
  <title>Student Dashboard</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f5f7fa;
      margin: 0;
      padding: 0;
      color: #333;
    }

    /* --- Top Bar --- */
    .top-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: #4CAF50;
      color: white;
      padding: 15px 30px;
    }

    .top-bar h1 {
      margin: 0;
      font-size: 22px;
    }

    .top-bar .logout {
      padding: 8px 15px;
      background: #e74c3c;
      color: white;
      text-decoration: none;
      border-radius: 5px;
      font-weight: bold;
      transition: background 0.2s;
    }

    .top-bar .logout:hover {
      background: #c0392b;
    }

    /* --- Content --- */
    .content {
      padding: 30px;
      text-align: center;
    }

    .content p {
      color: #555;
      margin-top: 5px;
    }

    h2 {
      margin-top: 40px;
      text-align: center;
    }

    /* --- Course Cards --- */
    .courses-container {
      display: flex;
      flex-wrap: wrap;
      gap: 25px;
      justify-content: center;
      margin-top: 25px;
    }

    .course-card {
      background: #fff;
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      width: 280px;              /* increased width */
      text-align: center;
      transition: transform 0.2s, box-shadow 0.2s;
    }

    .course-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
    }

    .course-card img {
      width: 100%;
      height: 160px;             /* increased height */
      object-fit: cover;
    }

    .course-card h3 {
      font-size: 18px;
      margin: 15px 0;
      color: #333;
      padding: 0 10px;
    }

    .course-card a {
      display: inline-block;
      margin-bottom: 20px;
      padding: 10px 15px;
      background: #4CAF50;
      color: white;
      text-decoration: none;
      border-radius: 5px;
      font-size: 15px;
      transition: background 0.2s;
    }

    .course-card a:hover {
      background: #45a049;
    }
  </style>
</head>
<body>

  <!-- Top bar -->
  <div class="top-bar">
    <h1>Welcome <%= user.username %> (Student)</h1>
    <a href="/logout" class="logout">Logout</a>
  </div>

  <!-- Content -->
  <div class="content">
    <p>Your USN: <%= user.usn %></p>

    <h2>Available Courses</h2>
    <div class="courses-container">
      <% courses.forEach(course => { %>
        <div class="course-card">
          <img src="<%= course.image %>" alt="<%= course.title %>">
          <h3><%= course.title %></h3>
          <a href="<%= course.link %>" target="_blank">Go to Course</a>
        </div>
      <% }) %>
    </div>
  </div>

</body>
</html>

